@model StoreApp.DataAccess.BusinessModels.Store

@{
    ViewData["Title"] = "History";
}

<h1>History</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StoreId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StoreId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Zip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zip)
        </dd>

    </dl>
</div>
<tbody>
    @foreach (var item in Model.OrderEnumerable)
    {
        <dl class="row">

            <dt class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Info)
            </dt>
            <dd class="col-sm-2">
                @Html.ActionLink("Details", "HistoryDetails", new { id = item.TransactionNumber })
            </dd>
        </dl>
  }
    </tbody>

