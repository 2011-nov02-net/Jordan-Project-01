@model InventoryViewModel

@{
    ViewData["Title"] = "Create";
}


<h1>Add @Html.DisplayFor(model => model.Name) To Order</h1>
<div class="row">
    <div class="col-md-4">
        <h4></h4>
    </div>
    <div class="col-md-8 float-right">
        <h4>@Html.DisplayFor(model => model.StoreName)</h4>
    </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StoreId" class="control-label"></label>
                    <input asp-for="StoreId" class="form-control" />
                    <span asp-validation-for="StoreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuantityPurchase" class="control-label"></label>
                    <Input asp-for="QuantityPurchase" class="form-control" />
                    <span asp-validation-for="QuantityPurchase" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="submit" value="Add To Cart" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-8">
            @Html.DisplayForModel(Model);
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
